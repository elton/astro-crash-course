---
import logosSmall from '../images/framework-logos-small.png';
import logos from '../images/framework-logos.png';

export interface Props {
  heading?: string;
  text?: string;
  showExtra?: boolean;
}

const {
  heading = 'Welcome To The Astro Crash Course!',
  text = 'Build super fast HTML-first websites using your favorite JavaScript frameworks',
  showExtra = false,
} = Astro.props as Props;
---

<section class='p-8 bg-gradient-to-b from-slate-800 to-purple-800'>
  <div class='max-w-lg text-white text-center my-12 mx-auto'>
    <h1 class='text-5xl font-semibold mb-5'>{heading}</h1>
    <p class='text-2xl mb-5'>
      {text}
    </p>
  </div>

  {
    showExtra && (
      <>
        <div class='flex justify-center mb-5'>
          <img class='rounded-lg hidden md:block' src={logos} alt='' />
          <img class='rounded-lg md:hidden' src={logosSmall} alt='' />
        </div>

        <p class='text-center text-white text-2xl mb-5 font-light'>
          <small>
            This is a demo website used for the YouTube crash course
          </small>
        </p>
      </>
    )
  }
</section>
